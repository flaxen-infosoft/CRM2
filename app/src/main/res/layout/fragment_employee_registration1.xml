<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeManagement.EmployeeRegistrationFragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bg_stroke"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Name of Employee"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittext_bg"
            android:elevation="8dp"
            android:inputType="text"
            android:padding="13dp"
            android:textSize="15sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Designation"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/candidate_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittext_bg"
            android:elevation="6dp"
            android:inputType="text"
            android:padding="13dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Phone No"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtphone"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_bg"
            android:elevation="6dp"
            android:inputType="number"
            android:padding="13dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtphonealt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Alternate Phone No"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/altphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtphone"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_bg"
            android:elevation="6dp"
            android:inputType="number"
            android:padding="13dp"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="Date"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtphone"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_bg"
            android:elevation="6dp"
            android:focusableInTouchMode="false"
            android:inputType="number"
            android:padding="13dp"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/txtstate"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="Select State"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/txtstate"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_bg"
            android:elevation="6dp"
            android:padding="8dp" />


        <TextView
            android:id="@+id/txtcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Select City"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/txtcity"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_bg"
            android:elevation="6dp"
            android:padding="8dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Official Id"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/pid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/candidate_alt_phone"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittext_bg"
            android:elevation="6dp"
            android:inputType="textEmailAddress"
            android:padding="13dp"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Personal Id"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/oid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/candidate_personal_email"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittext_bg"
            android:elevation="6dp"
            android:inputType="textEmailAddress"
            android:padding="13dp"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Official Sim"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/officialsim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/candidate_personal_email"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittext_bg"
            android:elevation="6dp"
            android:inputType="textEmailAddress"
            android:padding="13dp"
            android:textSize="15sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Address"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/candidate_source"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittext_bg"
            android:elevation="6dp"
            android:inputType="text"
            android:padding="13dp"
            android:textSize="15sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Password"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/candidate_city"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittext_bg"
            android:elevation="6dp"
            android:inputType="text"
            android:padding="13dp"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Status"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/candidate_city"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittext_bg"
            android:elevation="6dp"
            android:entries="@array/Status"
            android:padding="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Gender"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/candidate_city"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittext_bg"
            android:elevation="6dp"
            android:entries="@array/Gender"
            android:padding="6dp" />


        <TextView
            android:id="@+id/txtclgname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="College name"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/clgname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtphone"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_bg"
            android:elevation="6dp"
            android:inputType="number"
            android:padding="13dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtduration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Duration(in months)"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtphone"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_bg"
            android:elevation="6dp"
            android:inputType="number"
            android:padding="13dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtstipendamt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Stipend Amount"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/stipend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtphone"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_bg"
            android:elevation="6dp"
            android:inputType="number"
            android:padding="13dp"
            android:textSize="15sp" />


        <Button
            android:id="@+id/btn_next"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/candidate_state"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/bg_btn"
            android:elevation="6dp"
            android:text="Next"
            android:textColor="@color/white"
            app:backgroundTint="@color/megenta" />

    </LinearLayout>
</ScrollView>