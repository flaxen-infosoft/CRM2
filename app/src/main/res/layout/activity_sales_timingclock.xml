<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SalesManagement.sales_timingclock">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarreports"
        android:layout_width="0dp"
        android:layout_height="91dp"
        android:background="#6158CB"
        app:constraint_referenced_ids="toolbarreports"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="39dp"
                android:layout_marginLeft="39dp"
                android:layout_marginEnd="54dp"
                android:layout_marginRight="54dp"
                android:fontFamily="@font/aclonica"
                android:gravity="center_horizontal"
                android:text="Meeting"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:background="#6158CB"
                android:src="@drawable/ic_backarrow"></ImageButton>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    app:layout_constraintTop_toBottomOf="@id/toolbarreports">
    <LinearLayout
        android:id="@+id/my_button1"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginTop="23dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sales_circlemeetingtimer"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01:45:34 hour"
            android:textColor="@color/black"
            android:textSize="40dp"></TextView>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/endbutton"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Start"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:textColor="#F65F5F"
                app:backgroundTint="#FFDDDD"
                app:cornerRadius="2dp"
                />

            <LinearLayout
                android:id="@+id/my_button"
                android:layout_width="wrap_content"
                android:padding="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/sales_recorder"
                android:gravity="center_vertical"
                android:clickable="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_baseline_mic_24" />
            </LinearLayout>

            <Button
                android:id="@+id/timercanclebtn"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/cancel"
                android:padding="10dp"
                android:textColor="
                                #AA2727"
                app:backgroundTint="@color/white"
                app:cornerRadius="2dp"
                />
        </LinearLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/animation_view"
        app:lottie_rawRes="@raw/animation"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


