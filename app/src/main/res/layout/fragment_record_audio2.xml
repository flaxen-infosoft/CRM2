<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordAudioFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/meetingtimercircle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="340dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="@+id/imageView26"
        app:layout_constraintEnd_toEndOf="@+id/imageView26"
        app:layout_constraintStart_toStartOf="@+id/imageView26"
        app:layout_constraintTop_toTopOf="@+id/imageView26">

        <Chronometer
            android:id="@+id/timer33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:textSize="70sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <pl.droidsonroids.gif.GifImageView

        android:id="@+id/imageView28"
        android:layout_width="107dp"
        android:layout_height="79dp"
        android:layout_marginTop="72dp"
        android:elevation="100dp"
        android:outlineAmbientShadowColor="@color/black"
        android:src="@drawable/recbuttnew"
        app:layout_constraintEnd_toStartOf="@+id/completecard"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toEndOf="@+id/cancelcard"
        app:layout_constraintTop_toBottomOf="@+id/imageView26" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cancelcard"
        layout_height="wrap content"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardForegroundColor="#27FF1C1C"
        app:layout_constraintBottom_toBottomOf="@+id/imageView28"
        app:layout_constraintStart_toStartOf="@+id/imageView26"
        app:layout_constraintTop_toTopOf="@+id/imageView28">

        <TextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/aclonica"
            android:gravity="center|clip_vertical|center_horizontal"
            android:text="CANCEL"
            android:textColor="#F65F5F"
            android:textSize="12sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/completecard"
        layout_height="wrap content"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardForegroundColor="#27FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageView28"
        app:layout_constraintEnd_toEndOf="@+id/imageView26"
        app:layout_constraintTop_toTopOf="@+id/imageView28">

        <TextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/aclonica"
            android:gravity="center|clip_vertical|center_horizontal"
            android:text="COMPLETE"
            android:textColor="#F65F5F"
            android:textSize="8sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/listbtn"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:elevation="5dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/listhamnew"
        app:layout_constraintEnd_toEndOf="@+id/imageView28"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="@+id/imageView28"
        app:layout_constraintTop_toBottomOf="@+id/imageView28" />


</androidx.constraintlayout.widget.ConstraintLayout>