<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#33CECCF1"
        app:contentPaddingBottom="22dp"
        app:contentPaddingTop="22dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/leadname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Ankit Singh"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/recordbutton"
                android:layout_width="57dp"
                android:layout_height="49dp"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="60dp"
                android:background="#33CECCF1"
                app:layout_constraintStart_toEndOf="@+id/leadname"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/tabler_report"
                android:elevation="0dp"/>

            <Button
                android:id="@+id/startendbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Start"
                android:textColor="#029E40"
                app:backgroundTint="#8019B400"
                app:cornerRadius="2dp"
                app:layout_constraintStart_toEndOf="@+id/recordbutton"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>