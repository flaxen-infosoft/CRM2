                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Applied for"/>

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_below="@id/applied_for"
                        android:text="Date &amp; Time"/>

                </RelativeLayout>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="11dp"
                    android:background="@drawable/card_button_bg_blue_stroke"
                    android:entries="@array/assigned_by"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:src="@drawable/ic_call4"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="35dp"
                    android:id="@+id/call"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_green_call"/>

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_below="@id/call">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Resume"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:paddingRight="7dp"
                        android:paddingLeft="7dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_weight="1"
                        android:elevation="8dp"
                        android:textColor="@color/black"
                        android:background="@drawable/card_button_bg_blue_stroke"
                        android:gravity="center_horizontal" />


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Update Status"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:paddingRight="7dp"
                        android:paddingLeft="7dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:elevation="8dp"
                        android:background="@drawable/card_button_bg_blue_stroke"
                        android:gravity="center_horizontal" />

                    <TextView
