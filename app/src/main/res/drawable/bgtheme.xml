<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray shadow. -->
    <item
        >
        <shape>
            <padding
                android:bottom="1px"
                android:left="1px"
                android:right="1px"
                android:top="1px" />
            <solid android:color="#CECCF1"

                />
           <!-- <corners android:radius="2dp" />-->
        </shape>
    </item>
    <!-- White foreground. -->
    <item android:bottom="4dp"
        android:left="1dp"
        android:top="1dp"
        android:right="2dp">
        <shape>

            <solid android:color="@android:color/white" />
            <corners android:radius="30dp" />
        </shape>
    </item>
</layer-list>